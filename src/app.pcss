@tailwind base;

@layer base {
	h1 {
		@apply my-6 text-3xl dark:text-white;
	}
	h2 {
		@apply my-4 text-2xl dark:text-white;
	}
	h3 {
		@apply my-2 text-xl dark:text-white;
	}
}

@tailwind components;

@layer components {
	/* other classes */

	.container {
		@apply m-4;
	}
}

@tailwind utilities;
